    <form asp-action="FilterPerson" method="get" class="d-flex gap-2">
        <select name="query" class="form-control" >
            <option value="BornIn">BornIn</option>
            <option value="BornGreater">BornGreater</option>
            <option value="BornLess">BornLess</option>
        </select>
